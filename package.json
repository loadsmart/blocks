{
  "name": "@loadsmart/building-blocks",
  "version": "0.0.1",
  "description": "",
  "main": "index.js",
  "scripts": {
    "lint": "tslint 'src/**/*.{ts,tsx}' --config .tslint.json",
    "lint-fix": "tslint 'src/**/*.{ts,tsx}' --config .tslint.json --fix",
    "prettier-write": "prettier --write",
    "test": "jest"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/loadsmart/building-blocks.git"
  },
  "author": "",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/loadsmart/building-blocks/issues"
  },
  "homepage": "https://github.com/loadsmart/building-blocks#readme",
  "peerDependencies": {
    "react": "^16.6.1"
  },
  "devDependencies": {
    "@types/jest": "^24.0.11",
    "@types/react": "^16.8.8",
    "@types/react-native": "^0.57.41",
    "babel-core": "^6.26.3",
    "babel-jest": "^24.5.0",
    "babel-plugin-transform-remove-console": "^6.9.4",
    "babel-runtime": "^6.26.0",
    "husky": "^1.3.1",
    "jest": "^24.5.0",
    "lint-staged": "^8.1.5",
    "metro-react-native-babel-preset": "^0.53.1",
    "prettier": "^1.16.4",
    "ts-jest": "^24.0.0",
    "tslint": "^5.14.0",
    "tslint-config-prettier": "^1.18.0",
    "tslint-config-standard": "^8.0.1",
    "tslint-react": "^3.6.0",
    "typescript": "^3.3.4000"
  },
  "jest": {
    "automock": false,
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "globals": {
      "ts-jest": {
        "tsConfig": "tsconfig.jest.json"
      }
    },
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(ts|tsx|js)$",
    "testPathIgnorePatterns": [
      "\\.snap$",
      "<rootDir>/node_modules/"
    ],
    "cacheDirectory": ".jest/cache",
    "coverageDirectory": "./coverage/",
    "collectCoverage": true,
    "collectCoverageFrom": [
      "src/**/*.(ts|tsx|js)"
    ],
    "coveragePathIgnorePatterns": [
      "__stories__",
      "__fixtures__"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "yarn test"
    }
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,json}": [
      "yarn prettier-write",
      "git add"
    ]
  },
  "dependencies": {
    "react-native": "^0.59.1"
  }
}
